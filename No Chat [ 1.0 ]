#include <amxmodx>
#include <amxmisc>

#define PLUGIN "No CHAT"
#define VERSION "1.0"
#define AUTHOR "LordOfNothing"

new pCvar;

public plugin_init() {
  register_plugin(PLUGIN, VERSION, AUTHOR)
	register_clcmd("say","hook_say")
	register_clcmd("say_team","hook_say")
	pCvar = register_cvar("sv_nochat","1")
}

public hook_say(id)
{
	if(get_pcvar_num( pCvar ))
	{
		return 1;
	} 
	return 0;
	
}
